  <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
  <script>
    // Initialize date pickers
    flatpickr("#checkin", {
      dateFormat: "Y-m-d",
      minDate: "today"
    });
    
    flatpickr("#checkout", {
      dateFormat: "Y-m-d",
      minDate: "today"
    });
    
    // Dark mode toggle
    function toggleMode() {
      document.body.classList.toggle('dark-mode');
      const btn = document.getElementById('modeToggleBtn');
      btn.textContent = document.body.classList.contains('dark-mode') ? '‚òÄÔ∏è' : 'üåô';
    }
    
    // Add dark mode styles dynamically
    const style = document.createElement('style');
    style.textContent = `
      body.dark-mode {
        background-color: #1a1a1a;
        color: #f0f0f0;
      }
      
      body.dark-mode .booking-bar,
      body.dark-mode .currency-banner {
        background-color: #2d2d2d;
        color: #f0f0f0;
      }
      
      body.dark-mode .booking-option input,
      body.dark-mode .booking-option select {
        background-color: #3d3d3d;
        color: #f0f0f0;
        border-color: #4d4d4d;
      }
      
      body.dark-mode .booking-option label {
        color: #ffd700;
      }
      
      body.dark-mode .currency-banner {
        background-color: #1e3a5f;
      }
    `;
    document.head.appendChild(style);
  </script>
